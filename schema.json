{
  "@context": {
    "@vocab": "https://schema.org/",
    "id": "@id",
    "type": "@type"
  },
  "$id": "name-schema",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Name schema",
  "description": "A schema capturing a human name",
  "type": "object",
  "properties": {
    "name": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        }
      },
      "required": [
        "firstName",
        "lastName"
      ],
      "additionalProperties": false
    }
  }
}
